
<div id="new_loan_account">

    <h2> Apply for loan  </h2>

    <%= form_with url: "/create_loan_account", method: :post do |form| %>
                
        <%= form.label :account_type %>
        <%=select_tag "account_type", options_for_select(["Loan Account" ], "Loan Account")%><br/>

        <%= form.label :loan_type %>
        <%=select_tag "loan_type", options_for_select(["Home Loan", "Car Loan" , "Personal Loan" ,"Business Loan" ], "Home Loan")%><br/>

        <%= form.label :amount   %>
        <%= form.number_field :amount, step: :any %><br/>

        <%= form.label :duration_in_month  %>
        <%= form.number_field :duration  %><br/>

        <%= form.label :branch%>
        <%=select_tag "branch", options_for_select([ "1", "2" , "3" , "4"], "1")%><br/>
        
        <%= form.submit "Apply" %>

    <%end%>

</div>